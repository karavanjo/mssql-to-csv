<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <connectionStrings>
    <!--Your connection strings for each database-->
    <add name="mssql"
         connectionString="Data Source={YOUR_SQL_SERVER};Initial Catalog={YOUR_DATABASE};Integrated Security=True;MultipleActiveResultSets=True"
         providerName="System.Data.SqlClient" />
    <add name="mssql1"
         connectionString="Data Source={YOUR_SQL_SERVER};Initial Catalog={YOUR_DATABASE_1};Integrated Security=True;MultipleActiveResultSets=True"
         providerName="System.Data.SqlClient" />
    <add name="mssql2"
         connectionString="Data Source={YOUR_SQL_SERVER};Initial Catalog={YOUR_DATABASE_2};Integrated Security=True;MultipleActiveResultSets=True"
         providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>